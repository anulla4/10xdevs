---
import 'leaflet/dist/leaflet.css';
import '../styles/global.css';
import { Header } from '../components/layout/Header';

interface Props {
  title?: string;
  showHeader?: boolean;
  requireAuth?: boolean;
}

const { title = '10x Astro Starter', showHeader = true, requireAuth = false } = Astro.props;

/**
 * User State Verification
 *
 * Authentication state is provided by middleware (src/middleware/index.ts)
 * which verifies the user session on every request.
 *
 * Available user data:
 * - Astro.locals.user: { id: string, email?: string } | undefined
 * - Astro.locals.userId: string | undefined
 */
const isAuthenticated = !!Astro.locals.user;
const user = Astro.locals.user;

// Optional: Additional auth check at layout level
if (requireAuth && !isAuthenticated) {
  return Astro.redirect('/auth/login');
}
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/png" href="/favicon.png" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    {showHeader && <Header client:load isAuthenticated={isAuthenticated} user={user} />}
    <slot />
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>
