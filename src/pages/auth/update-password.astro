---
import Layout from '../../layouts/Layout.astro';
import { UpdatePasswordForm } from '../../components/auth/UpdatePasswordForm';

// Note: Token validation will be implemented in backend phase
// For now, we're just creating the UI
// In production, Supabase passes token in URL hash (#access_token=...)
// which will be handled by the UpdatePasswordForm component
---

<Layout title="Ustaw nowe hasło - Nature Log">
  <div
    class="min-h-screen flex items-center justify-center bg-gradient-to-br from-green-50 to-blue-50 dark:from-gray-900 dark:to-gray-800 px-4 py-12"
  >
    <div class="w-full max-w-md">
      <div class="text-center mb-8">
        <h1 class="text-3xl font-bold text-gray-900 dark:text-white mb-2">Ustaw nowe hasło</h1>
        <p class="text-muted-foreground">Wprowadź nowe hasło dla swojego konta</p>
      </div>

      <div class="bg-white dark:bg-gray-950 rounded-lg shadow-lg p-8 border border-gray-200 dark:border-gray-800">
        <UpdatePasswordForm client:load />
      </div>
    </div>
  </div>
</Layout>
